<!-- views/foods/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My pantry</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to My Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
    <% if (pantry.length > 0) { %>
    <ul>
        <% pantry.forEach((pantry) => { %>
        <li><%= pantry.foodName %></li>
        <form action="/users/<%= user._id %>/foods/<%= pantry._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete Item</button>
        </form>
            <a href="/users/<%= user._id %>/foods/<%= pantry._id %>/edit">Edit <%= pantry.foodName %></a>
        <% }) %>
    </ul>
    <% } else { %>
        <p> There are no items in this pantry</p> 
    <% } %>
</body>
</html>